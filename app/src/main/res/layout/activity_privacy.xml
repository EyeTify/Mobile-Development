<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_back_background"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/title_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/button_back"
            android:text="@string/title_privacy"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_privacy_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_back"
            android:textSize="12sp"
            android:text="@string/privacy_msg"/>

        <TextView
            android:id="@+id/title_privacy1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy_msg"
            android:text="@string/title_privacy1"
            android:fontFamily="@font/semibold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"

            />

        <TextView
            android:id="@+id/tv_privacy1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_privacy1"
            android:textSize="12sp"
            android:text="@string/text_privacy1"
            />

        <TextView
            android:id="@+id/title_privacy2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy1"
            android:text="@string/title_privacy2"
            android:fontFamily="@font/semibold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tv_privacy2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_privacy2"
            android:textSize="12sp"
            android:text="@string/text_privacy2"
            />

        <TextView
            android:id="@+id/title_privacy3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy2"
            android:text="@string/title_privacy3"
            android:fontFamily="@font/semibold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tv_privacy3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_privacy3"
            android:textSize="12sp"
            android:text="@string/text_privacy3"
            />

        <TextView
            android:id="@+id/title_privacy4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy3"
            android:text="@string/title_privacy4"
            android:fontFamily="@font/semibold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tv_privacy4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_privacy4"
            android:textSize="12sp"
            android:text="@string/text_privacy4"
            />

        <ImageView
            android:id="@+id/image_email"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/contact_email"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            android:onClick="sendEmail"
            />

        <ImageView
            android:id="@+id/image_contact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/contact_phone"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            android:onClick="openContacts"
            />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/image_email"
            app:layout_constraintStart_toStartOf="@id/image_email"
            app:layout_constraintEnd_toEndOf="@id/image_email"
            android:layout_marginTop="1dp"
            />

        <TextView
            android:id="@+id/text_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/image_contact"
            app:layout_constraintStart_toStartOf="@id/image_contact"
            app:layout_constraintEnd_toEndOf="@id/image_contact"
            android:layout_marginTop="1dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>